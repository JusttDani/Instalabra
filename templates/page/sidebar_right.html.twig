<div
	class="menu-bar-right">
	<!-- Buscador -->
	<div class="search-box">
		<form action="{{ path('app_search') }}" method="GET" class="search-form">
			<input type="text" name="q" placeholder="Buscar...">
		</form>
	</div>

	<!-- Sugerencias de usuarios a seguir -->
	<div class="suggestions box">
		<h3>Usuarios sugeridos</h3>
		<ul class="user-suggestions" id="user-suggestions">
			{% for suggestionData in suggestedUsers %}
				{% set suggestion = suggestionData[0] %}
				{% if (app.user and suggestion.id != app.user.id) and (suggestion.id not in followingIds) %}
					<li class="suggestion-item">
						<img class="suggestion-avatar" src="{{ suggestion.fotoPerfil ? asset('uploads/perfiles/' ~ suggestion.fotoPerfil) : asset('multimedia/Prueba/noicon.jpg') }}" alt="{{ suggestion.nombre }}">
						<div class="user-info-suggestion">
							<span class="suggestion-name">
								<a href="{{ path('app_usuario_perfil', {id: suggestion.id}) }}" style="text-decoration: none; color: inherit;">
									{{ suggestion.nombre }}
								</a>
							</span>
							{# <span class="suggestion-handle">{{ suggestion.email }}</span> #}
						</div>
						{% if app.user and app.user != suggestion and suggestion.id not in followingIds %}
							<a href="{{ path('app_usuario_follow', {id: suggestion.id}) }}" class="ajax-follow-link" data-turbo="false">
								<button class="suggestion-follow-btn">Seguir</button>
							</a>
						{% endif %}
					</li>
				{% endif %}
			{% else %}
				<p class="no-suggestions">No hay sugerencias.</p>
			{% endfor %}
		</ul>
	</div>

    <!-- Wordle Game -->
    <div class="wordle-section box" id="wordle-sidebar">
        <h3>Palabra del DÃ­a</h3>
        <div id="wordle-message" class="text-center small fw-bold mb-2"></div>
        <div id="wordle-grid" class="wordle-grid">
            {% for row in 0..5 %}
                <div class="wordle-row" data-row="{{ row }}">
                    {% for col in 0..4 %}
                        <div class="tile" data-col="{{ col }}"></div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <input type="text" id="wordle-hidden-input" maxlength="5" style="position: absolute; opacity: 0; pointer-events: none;">
    </div>

</div>
