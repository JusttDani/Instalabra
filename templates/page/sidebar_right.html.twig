<div class="menu-bar-right">
	<div class="search-box">
		<form action="{{ path('app_search') }}" method="GET" class="search-form">
			<input type="text" name="q" placeholder="Buscar" value="{{ app.request.query.get('q') }}">
		</form>
	</div>

	<!-- Sugerencias de usuarios a seguir -->
	<div class="suggestions box">
		<h3>Usuarios sugeridos</h3>
		<ul class="user-suggestions" id="user-suggestions">
			{% for suggestionData in suggestedUsers %}
				{% set suggestion = suggestionData[0] %}
				{% if (app.user and suggestion.id != app.user.id) and (suggestion.id not in followingIds) %}
					<li>
						<img src="{{ suggestion.fotoPerfil ? asset('uploads/perfiles/' ~ suggestion.fotoPerfil) : asset('multimedia/Prueba/noicon.jpg') }}" alt="{{ suggestion.nombre }}">
						<div class="user-info-suggestion">
							<span class="username">
								<a href="{{ path('app_usuario_perfil', {id: suggestion.id}) }}" style="text-decoration: none; color: inherit;">
									{{ suggestion.nombre }}
								</a>
							</span>
							{# <span class="handle">{{ suggestion.email }}</span> #}
						</div>
						{% if app.user and app.user != suggestion and suggestion.id not in followingIds %}
							<a href="{{ path('app_usuario_follow', {id: suggestion.id}) }}" class="ajax-follow-link">
								<button>Seguir</button>
							</a>
						{% endif %}
					</li>
				{% endif %}
			{% else %}
				<p>No hay sugerencias.</p>
			{% endfor %}
		</ul>
	</div>
	<div id="wordle-sidebar" class="p-3 bg-light border rounded">
    <h5 class="text-center">Palabra del DÃ­a</h5>
    <div id="wordle-grid" class="d-grid gap-1 mb-2">
        {% for row in 0..5 %}
            <div class="wordle-row d-flex gap-1 justify-content-center" data-row="{{ row }}">
                {% for col in 0..4 %}
                    <div class="tile border d-flex align-items-center justify-content-center fw-bold" 
                         style="width: 35px; height: 35px; text-transform: uppercase;" 
                         data-col="{{ col }}"></div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <div id="wordle-message" class="text-center small fw-bold mb-2"></div>
</div>
